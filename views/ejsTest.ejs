<!DOCTYPE html>
    <h1>안녕하세요</h1>
    <h2>ejs로 만든 페이지입니다.</h2>
    <input type="text" id="inputText">
    <input type="text" id="inputText2">
    <button id = "firstButton">버튼</button>
    <script src="http://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script>
        $("#firstButton").click(function(){
            alert("button click");
            var userInput = $("#inputText").val();
            var userInput2 = $("#inputText2").val();
            //alert("사용자 입력 데이터는 : "+userInput+userInput2);
            $.ajax({
                url: "/userData",
                type: "POST",
                data: {
                    userData1: userInput,
                    userData2: userInput2
                },
                success: function (data) {
                    console.log(data);
                    if(data == true){
                        alert('요청 성공');
                    }
                },
            });

        })
    </script>
</html>